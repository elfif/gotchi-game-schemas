{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    },
    "lib": ["esnext"],
    "declaration": true,
    // "declarationDir": "types"
  },
  "include": ["src", "*.tsx", "*.ts", "*.json"],
  "exclude": ["coverage", "config", "dist", "tools", "node_modules/**"]
}
